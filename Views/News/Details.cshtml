@model myapp.Models.NewsArticle

@{
    ViewData["Title"] = Model.Title;
}

<style>
    .article-container {
        max-width: 900px;
        margin: 2rem auto;
        background: #fff;
        padding: 2.5rem;
        border-radius: 12px;
        box-shadow: 0 8px 25px rgba(0,0,0,0.08);
    }

    .article-header {
        text-align: center;
        margin-bottom: 2rem;
    }

    .article-title {
        font-size: 2.8rem;
        font-weight: 700;
        color: #2c3e50;
        line-height: 1.2;
    }

    .article-meta {
        font-size: 0.95rem;
        color: #7f8c8d;
        margin-top: 1rem;
    }

    .article-meta span {
        margin: 0 10px;
    }

    .article-image {
        width: 100%;
        height: 400px;
        object-fit: cover;
        border-radius: 8px;
        margin-bottom: 2rem;
    }

    .article-content {
        font-size: 1.1rem;
        line-height: 1.8;
        color: #34495e;
        white-space: pre-wrap; /* This will respect newlines and spaces */
    }

    .back-link {
        display: inline-block;
        margin-top: 2rem;
        color: #007bff;
        text-decoration: none;
        font-weight: 600;
    }

    .back-link:hover {
        text-decoration: underline;
    }
</style>

<div class="article-container">
    <div class="article-header">
        <h1 class="article-title">@Model.Title</h1>
        <div class="article-meta">
            <span>By <strong>@Model.Author</strong></span> | 
            <span>Published on @Model.PublishedDate.ToString("MMMM dd, yyyy")</span>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.ImageUrl))
    {
        <img src="@Model.ImageUrl" class="article-image" alt="@Model.Title">
    }

    <div class="article-content">
        @Model.Content
    </div>

    <hr class="my-4">

    <a asp-action="Index" asp-controller="Home" class="back-link">
        <i class="fas fa-arrow-left"></i> Back to News
    </a>
</div>
