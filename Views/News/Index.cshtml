@model IEnumerable<myapp.Models.NewsArticle>

@{
    ViewData["Title"] = "News Management";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-5">@ViewData["Title"]</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Create New
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.First().Title)</th>
                        <th>@Html.DisplayNameFor(model => model.First().Author)</th>
                        <th>@Html.DisplayNameFor(model => model.First().PublishedDate)</th>
                        <th>@Html.DisplayNameFor(model => model.First().IsFeatured)</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
            @foreach (var item in Model)
            {
                    <tr>
                        <td>
                           @Html.DisplayFor(modelItem => item.Title)
                        </td>
                         <td>
                           @Html.DisplayFor(modelItem => item.Author)
                        </td>
                        <td>
                            @item.PublishedDate.ToString("d MMMM yyyy")
                        </td>
                        <td>
                            <span class="badge bg-@(item.IsFeatured ? "success" : "secondary")">
                                @(item.IsFeatured ? "Yes" : "No")
                            </span>
                        </td>
                        <td class="text-end">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary me-2">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">
                                <i class="fas fa-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
            }
                </tbody>
            </table>
        </div>
    </div>
</div>

