@model myapp.Models.NewsArticle

@{
    ViewData["Title"] = "Confirm Delete";
}

<div class="container mt-5">
    <h1 class="display-5 text-danger">@ViewData["Title"]</h1>
    <p class="lead">Are you sure you want to delete this article?</p>
    
    <div class="alert alert-danger mt-4" role="alert">
        <h4 class="alert-heading">Warning!</h4>
        <p>This action is irreversible. The article titled "<strong>@Model.Title</strong>" will be permanently removed.</p>
    </div>

    <div class="card shadow-sm mt-4">
        <div class="card-body">
             <dl class="row">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Title)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Title)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Author)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Author)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.PublishedDate)</dt>
                <dd class="col-sm-9">@Model.PublishedDate.ToString("d MMMM yyyy")</dd>
            </dl>

            <form asp-action="Delete" class="mt-4">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-end">
                    <a asp-action="Index" class="btn btn-secondary me-2">Cancel</a>
                    <button type="submit" class="btn btn-danger">Delete Article</button>
                </div>
            </form>
        </div>
    </div>
</div>
