@model myapp.Models.MasterDataCombination

@{
    ViewData["Title"] = "Delete Master Data Combination";
}

<link rel="stylesheet" href="~/css/master-data.css" />

<div class="card">
    <div class="card-header bg-danger text-white">
        <h1><i class="fas fa-exclamation-triangle"></i> Confirm Deletion</h1>
    </div>
    <div class="card-body">
        <p class="lead">Are you sure you want to delete this master data combination?</p>
        <hr />
        <dl class="row">
            <dt class="col-sm-3"><i class="fas fa-building"></i> Department</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.DepartmentName)</dd>

            <dt class="col-sm-3"><i class="fas fa-sitemap"></i> Section</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.SectionName)</dd>

            <dt class="col-sm-3"><i class="fas fa-industry"></i> Plant</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.PlantName)</dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <div class="form-group text-center mt-5">
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash-alt"></i> Delete
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>
