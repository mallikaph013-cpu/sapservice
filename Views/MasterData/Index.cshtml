@model myapp.Models.ViewModels.MasterDataViewModel

@{ ViewData["Title"] = "Master Data Management"; }

<h1>Master Data Management</h1>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <form asp-action="CreateMasterData" method="post">
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>
                    <div class="form-row">
                        <div class="form-group col-md-3">
                            <label asp-for="NewCombination.DepartmentName"></label>
                            <input asp-for="NewCombination.DepartmentName" class="form-control" list="department-list" />
                            <datalist id="department-list">
                                @foreach (var item in Model.DepartmentList)
                                {
                                    <option value="@item.Value">@item.Text</option>
                                }
                            </datalist>
                            <span asp-validation-for="NewCombination.DepartmentName" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-3">
                            <label asp-for="NewCombination.SectionName"></label>
                            <input asp-for="NewCombination.SectionName" class="form-control" list="section-list" />
                            <datalist id="section-list">
                                @foreach (var item in Model.SectionList)
                                {
                                    <option value="@item.Value">@item.Text</option>
                                }
                            </datalist>
                            <span asp-validation-for="NewCombination.SectionName" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-3">
                            <label asp-for="NewCombination.PlantName"></label>
                            <input asp-for="NewCombination.PlantName" class="form-control" list="plant-list" />
                            <datalist id="plant-list">
                                @foreach (var item in Model.PlantList)
                                {
                                    <option value="@item.Value">@item.Text</option>
                                }
                            </datalist>
                            <span asp-validation-for="NewCombination.PlantName" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-3 align-self-end">
                            <input type="submit" value="Save Combination" class="btn btn-primary btn-block" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<hr />

<h2>Saved Combinations</h2>
<div class="card">
    <div class="card-body">
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.NewCombination.DepartmentName)</th>
                    <th>@Html.DisplayNameFor(model => model.NewCombination.SectionName)</th>
                    <th>@Html.DisplayNameFor(model => model.NewCombination.PlantName)</th>
                    <th>@Html.DisplayNameFor(model => model.NewCombination.CreatedAt)</th>
                    <th>@Html.DisplayNameFor(model => model.NewCombination.CreatedBy)</th>
                    <th>@Html.DisplayNameFor(model => model.NewCombination.UpdatedAt)</th>
                    <th>@Html.DisplayNameFor(model => model.NewCombination.UpdatedBy)</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.MasterDataCombinations != null && Model.MasterDataCombinations.Any())
                {
                    @foreach (var item in Model.MasterDataCombinations.OrderByDescending(x => x.CreatedAt))
                    {
                        <tr>
                            <td>@item.DepartmentName</td>
                            <td>@item.SectionName</td>
                            <td>@item.PlantName</td>
                            <td>@item.CreatedAt.ToLocalTime().ToString("g")</td>
                            <td>@item.CreatedBy</td>
                            <td>@item.UpdatedAt.ToLocalTime().ToString("g")</td>
                            <td>@item.UpdatedBy</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7" class="text-center">No combinations found.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
