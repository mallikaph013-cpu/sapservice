@model myapp.Models.RequestItem

@{
    ViewData["Title"] = "Delete Request";
}

<style>
    .delete-container {
        background: #ffffff;
        padding: 40px;
        border-radius: 12px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        margin-top: 50px;
    }
    .danger-header {
        color: #e74c3c;
        font-weight: 700;
        border-bottom: 2px solid #e74c3c;
        padding-bottom: 10px;
    }
    .item-summary {
        background-color: #f8f9fa;
        border-left: 5px solid #e74c3c;
        padding: 20px;
        margin-top: 20px;
    }
</style>

<div class="delete-container">
    <h1 class="danger-header">Delete Confirmation</h1>
    <h3>Are you sure you want to delete this service request?</h3>
    <p class="text-muted">This action cannot be undone.</p>

    <div class="item-summary">
        <dl class="row">
            <dt class = "col-sm-3">Request ID</dt>
            <dd class = "col-sm-9">@Model.Id</dd>

            <dt class = "col-sm-3">Request Type</dt>
            <dd class = "col-sm-9">@Model.RequestType</dd>
            
            <dt class = "col-sm-3">Description</dt>
            <dd class = "col-sm-9">@Model.Description</dd>

            <dt class = "col-sm-3">Requester</dt>
            <dd class = "col-sm-9">@Model.Requester</dd>

            <dt class = "col-sm-3">Request Date</dt>
            <dd class = "col-sm-9">@Model.RequestDate.ToString("g")</dd>

             <dt class = "col-sm-3">Status</dt>
            <dd class = "col-sm-9">@Model.Status</dd>
        </dl>
    </div>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <div class="mt-4">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
