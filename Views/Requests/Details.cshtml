@model myapp.Models.RequestItem

@{
    ViewData["Title"] = "Request Details";

    // Helper to get status badge color class
    Func<string, string> GetStatusClass = (status) => {
        switch (status?.ToLower()) {
            case "approved": return "status-approved";
            case "rejected": return "status-rejected";
            case "processing": return "status-processing";
            default: return "status-pending";
        }
    };
}

<div class="row justify-content-center">
    <div class="col-lg-10 col-xl-9">
        <div class="main-content-card">

            <!-- Header -->
            <div class="d-flex justify-content-between align-items-start mb-4">
                <div>
                    <h2 class="mb-1">Details for Request #@Model.Id</h2>
                    <p class="text-light mb-0">Type: @Model.RequestType</p>
                </div>
                <span class="request-status @GetStatusClass(Model.Status)">@Model.Status</span>
            </div>

            <!-- Requester Info -->
            <div class="mb-4">
                <h5 class="mb-3">Requester Information</h5>
                <div class="row g-3">
                    <div class="col-md-6"><strong>Requester:</strong> @Model.Requester</div>
                    <div class="col-md-6"><strong>Request Date:</strong> @Model.RequestDate.ToString("MMMM dd, yyyy")</div>
                </div>
            </div>

            <hr class="my-4">

            <!-- Request Details -->
            <div class="mb-4">
                <h5 class="mb-3">Request Details</h5>
                <p><strong>Description:</strong></p>
                <p>@Html.DisplayFor(model => model.Description)</p>
            </div>
            
            <hr class="my-4">

            <!-- Material Info -->
            <div class="mb-4">
                <h5 class="mb-3">Material Information</h5>
                <div class="row g-3">
                    <div class="col-md-4"><strong>Item Code:</strong> @Model.ItemCode</div>
                    <div class="col-md-8"><strong>English Mat/Description:</strong> @Model.EnglishMatDescription</div>
                    <div class="col-md-4"><strong>Model Name:</strong> @Model.ModelName</div>
                    <div class="col-md-4"><strong>Plant:</strong> @Model.PlantFG</div>
                    <div class="col-md-4"><strong>Material Group:</strong> @Model.MaterialGroup</div>
                    <div class="col-md-4"><strong>Division:</strong> @Model.DivisionCode</div>
                    <div class="col-md-4"><strong>Profit Center:</strong> @Model.ProfitCenter</div>
                    <div class="col-md-4"><strong>MRP Controller:</strong> @Model.MrpController</div>
                    <div class="col-md-4"><strong>Purchasing Group:</strong> @Model.PurchasingGroup</div>
                    <div class="col-md-4"><strong>Valuation Class:</strong> @Model.ValClass</div>
                    <div class="col-md-4"><strong>Price:</strong> @Model.Price?.ToString("C")</div>
                    <div class="col-md-4"><strong>Distribution Channel:</strong> @Model.DistributionChannel</div>

                    @if(Model.RequestType == myapp.Models.RequestType.IPO)
                    {
                        <div class="col-md-4"><strong>Tariff Code:</strong> @Model.TariffCode</div>
                        <div class="col-md-4"><strong>Planner:</strong> @Model.Planner</div>
                    }
                </div>
            </div>

            <!-- BOM Components Table -->
            @if (Model.BomComponents != null && Model.BomComponents.Any())
            {
                <hr class="my-4">
                <div class="mb-4">
                    <h5 class="mb-3">BOM Components</h5>
                    <div class="table-responsive">
                        <table class="table table-sm table-bordered">
                            <thead class="table-light">
                                <tr>
                                    <th>Level</th><th>Item</th><th>Item Cat</th><th>Component</th><th>Description</th><th>Quantity</th><th>Unit</th><th>Usage</th><th>Plant</th><th>Sloc</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.BomComponents.OrderBy(c => c.Level).ThenBy(c => c.Item))
                                {
                                    <tr>
                                        <td>@item.Level</td><td>@item.Item</td><td>@item.ItemCat</td><td>@item.ComponentNumber</td><td>@item.Description</td><td>@item.ItemQuantity</td><td>@item.Unit</td><td>@item.BomUsage</td><td>@item.Plant</td><td>@item.Sloc</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            }

            <!-- Routings Table -->
            @if (Model.Routings != null && Model.Routings.Any())
            {
                 <hr class="my-4">
                <div class="mb-4">
                    <h5 class="mb-3">Routings</h5>
                     <div class="table-responsive">
                        <table class="table table-sm table-bordered">
                            <thead class="table-light">
                                <tr>
                                    <th>Material</th><th>Description</th><th>Work Center</th><th>Operation</th><th>Base Qty</th><th>Unit</th><th>Labor Costs</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Routings)
                                {
                                    <tr>
                                       <td>@item.Material</td><td>@item.Description</td><td>@item.WorkCenter</td><td>@item.Operation</td><td>@item.BaseQty</td><td>@item.Unit</td><td>@item.DirectLaborCosts?.ToString("C")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            }

            <!-- Action Buttons -->
            <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-5">
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit Request</a> 
            </div>
        </div>
    </div>
</div>
