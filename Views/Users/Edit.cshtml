@model myapp.Models.EditUserViewModel

@{
    ViewData["Title"] = "Edit User";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0"><i class="fas fa-user-edit me-2"></i>@ViewData["Title"]</h4>
            </div>
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <input type="hidden" asp-for="Id" />

                    <h5 class="card-title">User Information</h5>
                    <hr>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <input asp-for="FirstName" class="form-control" placeholder="First Name" />
                                <label asp-for="FirstName">First Name</label>
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <input asp-for="LastName" class="form-control" placeholder="Last Name" />
                                <label asp-for="LastName">Last Name</label>
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Email" class="form-control" placeholder="Email" />
                        <label asp-for="Email">Email Address</label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <h5 class="card-title mt-4">Department & Role</h5>
                    <hr>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <select asp-for="DepartmentId" class="form-select" asp-items="ViewBag.Departments">
                                    <option value="">-- Select Department --</option>
                                </select>
                                <label asp-for="DepartmentId">Department</label>
                                <span asp-validation-for="DepartmentId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <select asp-for="SectionId" class="form-select">
                                    <option value="">-- Select Section --</option>
                                </select>
                                <label asp-for="SectionId">Section</label>
                                <span asp-validation-for="SectionId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-check form-switch mb-4">
                        <input class="form-check-input" type="checkbox" asp-for="IsIT">
                        <label class="form-check-label" asp-for="IsIT">Assign to IT Role</label>
                    </div>

                    <h5 class="card-title mt-4">
                        <a data-bs-toggle="collapse" href="#securityCollapse" role="button" aria-expanded="false" aria-controls="securityCollapse" class="text-decoration-none">
                           <i class="fas fa-chevron-down me-1"></i> Security
                        </a>
                    </h5>
                    <hr>
                    <div class="collapse" id="securityCollapse">
                        <p class="text-muted">Leave these fields blank to keep the current password.</p>
                        <div class="row">
                             <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="NewPassword" class="form-control" placeholder="New Password" />
                                    <label asp-for="NewPassword">New Password</label>
                                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="ConfirmNewPassword" class="form-control" placeholder="Confirm New Password" />
                                    <label asp-for="ConfirmNewPassword">Confirm New Password</label>
                                    <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card-footer bg-light text-end mt-4">
                        <a asp-action="Index" class="btn btn-secondary me-2">
                            <i class="fas fa-arrow-left me-1"></i> Back to List
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-1"></i> Save Changes
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $(document).ready(function () {
            const departmentDropdown = $('#DepartmentId');
            const sectionDropdown = $('#SectionId');
            const initialSectionId = '@Model.SectionId'; // Store the initial section ID

            function updateSections(isInitialLoad = false) {
                const departmentId = departmentDropdown.val();
                sectionDropdown.empty().append($('<option></option>').val('').text('-- Select Section --'));
                sectionDropdown.prop('disabled', true);

                if (departmentId) {
                    $.ajax({
                        url: '@Url.Action("GetSections", "Users")',
                        type: 'GET',
                        dataType: 'json',
                        data: { departmentId: departmentId },
                        success: function (data) {
                            if (data && data.length > 0) {
                                $.each(data, function (index, item) {
                                    const option = $('<option></option>').val(item.value).text(item.text);
                                    if (isInitialLoad && item.value == initialSectionId) {
                                        option.prop('selected', true);
                                    }
                                    sectionDropdown.append(option);
                                });
                                sectionDropdown.prop('disabled', false);
                            } else {
                                sectionDropdown.append($('<option></option>').val('').text('No sections available'));
                            }
                        },
                        error: function () {
                            sectionDropdown.append($('<option></option>').val('').text('Error loading sections'));
                        }
                    });
                }
            }

            departmentDropdown.change(function() {
                updateSections();
            });

            if (departmentDropdown.val()) {
                updateSections(true); 
            } else {
                 sectionDropdown.prop('disabled', true);
            }
        });
    </script>
}
