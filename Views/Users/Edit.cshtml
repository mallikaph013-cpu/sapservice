@model myapp.Models.ViewModels.EditUserViewModel

@{
    ViewData["Title"] = "Edit User";
}

<link rel="stylesheet" href="~/css/create-user.css" />

<div class="row justify-content-center">
    <div class="col-md-9 col-lg-8">
        <div class="form-container">
            <div class="text-center">
                <h1>Edit User</h1>
                <p class="subtitle">Update the user's details below.</p>
            </div>
            
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="FirstName" class="control-label"></label>
                            <input asp-for="FirstName" class="form-control" placeholder="e.g., John" />
                            <i class="form-icon fas fa-user"></i>
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="LastName" class="control-label"></label>
                            <input asp-for="LastName" class="form-control" placeholder="e.g., Doe" />
                            <i class="form-icon fas fa-user"></i>
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="UserName" class="control-label"></label>
                    <input asp-for="UserName" class="form-control" placeholder="e.g., jdoe" />
                    <i class="form-icon fas fa-user"></i>
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" placeholder="e.g., jdoe@example.com" />
                    <i class="form-icon fas fa-envelope"></i>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <hr/>

                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="Department" class="control-label"></label>
                            <select id="Department" asp-for="Department" class="form-control" asp-items="@Model.DepartmentList">
                                <option value="">-- Select Department --</option>
                            </select>
                            <i class="form-icon fas fa-building"></i>
                            <span asp-validation-for="Department" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="Section" class="control-label"></label>
                            <select id="Section" asp-for="Section" class="form-control" asp-items="@Model.SectionList">
                                 <option value="">-- Select Section --</option>
                            </select>
                            <i class="form-icon fas fa-briefcase"></i>
                            <span asp-validation-for="Section" class="text-danger"></span>
                        </div>
                    </div>
                     <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="Plant" class="control-label"></label>
                             <select id="Plant" asp-for="Plant" class="form-control" asp-items="@Model.PlantList">
                                 <option value="">-- Select Plant --</option>
                            </select>
                            <i class="form-icon fas fa-industry"></i>
                            <span asp-validation-for="Plant" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <hr />

                <div class="row">
                    <div class="col-md-6 mb-3">
                         <div class="form-group form-check">
                            <input class="form-check-input" asp-for="IsActive" />
                            <label class="form-check-label" asp-for="IsActive">
                                @Html.DisplayNameFor(model => model.IsActive)
                            </label>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="form-group form-check">
                            <input class="form-check-input" asp-for="IsIT" />
                            <label class="form-check-label" asp-for="IsIT">
                                @Html.DisplayNameFor(model => model.IsIT)
                            </label>
                        </div>
                    </div>
                </div>

                <div class="form-group text-center mt-5">
                    <button type="submit" class.cshtml"btn btn-primary">
                        Save Changes
                        <i class="fas fa-save"></i>
                    </button>
                </div>
            </form>
            <div class="text-center">
                 <a asp-action="Index" class="back-to-list">
                    <i class="fas fa-arrow-left"></i> Back to List
                 </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }

    <script>
        $(document).ready(function () {
             // Store selected values from the Model to re-select them after populating
            var selectedSection = "@Model.Section";
            var selectedPlant = "@Model.Plant";

            function updateDropdowns(isInitialLoad = false) {
                var department = $('#Department').val();
                var sectionDropdown = $('#Section');
                var plantDropdown = $('#Plant');

                sectionDropdown.prop('disabled', true).empty().append('<option value="">-- Loading... --</option>');
                plantDropdown.prop('disabled', true).empty().append('<option value="">-- Loading... --</option>');

                if (department) {
                    $.getJSON(`@Url.Action("GetSectionsAndPlants")?department=${department}`, function (data) {
                        sectionDropdown.empty().append('<option value="">-- Select Section --</option>');
                        if (data.sections && data.sections.length > 0) {
                            sectionDropdown.prop('disabled', false);
                            $.each(data.sections, function (i, item) {
                                // On initial load, use the value from the Model
                                var isSelected = isInitialLoad ? item.value === selectedSection : false;
                                sectionDropdown.append($('<option>', {
                                    value: item.value,
                                    text: item.text,
                                    selected: isSelected
                                }));
                            });
                        }

                        plantDropdown.empty().append('<option value="">-- Select Plant --</option>');
                        if (data.plants && data.plants.length > 0) {
                            plantDropdown.prop('disabled', false);
                            $.each(data.plants, function (i, item) {
                                // On initial load, use the value from the Model
                                var isSelected = isInitialLoad ? item.value === selectedPlant : false;
                                plantDropdown.append($('<option>', {
                                    value: item.value,
                                    text: item.text,
                                    selected: isSelected
                                }));
                            });
                        }
                    });
                } else {
                    sectionDropdown.empty().append('<option value="">-- Select Department First --</option>');
                    plantDropdown.empty().append('<option value="">-- Select Department First --</option>');
                }
            }

            $('#Department').change(function () {
                updateDropdowns(false);
            });

            // Initial call to populate dropdowns on page load
            if ($('#Department').val()) {
                 updateDropdowns(true);
            }
        });
    </script>
}
