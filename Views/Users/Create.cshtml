@model myapp.Models.ViewModels.CreateUserViewModel

@{{
    ViewData["Title"] = "Create User";
}}

<style>
    body {{
        background-color: #f4f7f6;
        color: #333;
    }}

    .form-container {{
        background: #ffffff;
        padding: 40px;
        border-radius: 12px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        margin-top: 50px;
        margin-bottom: 50px;
    }}

    h1 {{
        font-weight: 700;
        color: #2c3e50;
        margin-bottom: 10px;
    }}

    .subtitle {{
        color: #7f8c8d;
        margin-bottom: 30px;
    }}

    .form-group {{
        margin-bottom: 1.5rem;
    }}

    .control-label {{
        font-weight: 600;
        margin-bottom: .5rem;
        color: #34495e;
    }}

    .form-control {{
        border-radius: 8px;
        border: 1px solid #dcdcdc;
        padding: 12px 15px;
        transition: all 0.3s ease;
        box-shadow: none;
    }}

    .form-control:focus {{
        border-color: #3498db;
        box-shadow: 0 0 0 3px rgba(52, 152, 219, 0.2);
        outline: none;
    }}
    
    .form-control, select.form-control {{
        height: auto; /* Override default height to respect padding */
    }}

    .btn-primary {{
        background-color: #3498db;
        border-color: #3498db;
        padding: 12px 30px;
        font-size: 1rem;
        font-weight: 600;
        border-radius: 8px;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(52, 152, 219, 0.2);
    }}

    .btn-primary:hover {{
        background-color: #2980b9;
        border-color: #2980b9;
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(52, 152, 219, 0.3);
    }}
    
    .back-to-list {{
        display: inline-block;
        margin-top: 20px;
        color: #3498db;
        text-decoration: none;
        font-weight: 500;
    }}

    .back-to-list:hover {{
        text-decoration: underline;
    }}

    .form-check-input {{
        width: 1.25em;
        height: 1.25em;
        margin-top: 0.15em;
    }}

    .form-check-label {{
        padding-left: 0.5em;
    }}
</style>

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-7">
        <div class="form-container">
            <h1 class="text-center">Create New User</h1>
            <p class="text-center subtitle">Fill out the form below to add a new user to the system.</p>
            <hr />

            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="User.FirstName" class="control-label"></label>
                            <input asp-for="User.FirstName" class="form-control" placeholder="e.g., John" />
                            <span asp-validation-for="User.FirstName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="User.LastName" class="control-label"></label>
                            <input asp-for="User.LastName" class="form-control" placeholder="e.g., Doe" />
                            <span asp-validation-for="User.LastName" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="User.Username" class="control-label"></label>
                    <input asp-for="User.Username" class="form-control" placeholder="e.g., jdoe" />
                    <span asp-validation-for="User.Username" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control" type="password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <hr/>

                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="User.Department" class="control-label"></label>
                            <select id="Department" asp-for="User.Department" class="form-control" asp-items="@Model.DepartmentList">
                                <option value="">-- Select Department --</option>
                            </select>
                            <span asp-validation-for="User.Department" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="User.Section" class="control-label"></label>
                            <select id="Section" asp-for="User.Section" class="form-control" asp-items="@Model.SectionList">
                                 <option value="">-- Select Section --</option>
                            </select>
                            <span asp-validation-for="User.Section" class="text-danger"></span>
                        </div>
                    </div>
                     <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="User.Plant" class="control-label"></label>
                             <select id="Plant" asp-for="User.Plant" class="form-control" asp-items="@Model.PlantList">
                                 <option value="">-- Select Plant --</option>
                            </select>
                            <span asp-validation-for="User.Plant" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <hr />

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group form-check">
                            <input class="form-check-input" asp-for="User.IsActive" />
                            <label class="form-check-label" asp-for="User.IsActive">
                                @Html.DisplayNameFor(model => model.User.IsActive)
                            </label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group form-check">
                            <input class="form-check-input" asp-for="User.IsIT" />
                            <label class="form-check-label" asp-for="User.IsIT">
                                @Html.DisplayNameFor(model => model.User.IsIT)
                            </label>
                        </div>
                    </div>
                </div>

                <div class="form-group text-center mt-4">
                    <input type="submit" value="Create User" class="btn btn-primary" />
                </div>
            </form>
            <div class="text-center">
                 <a asp-action="Index" class="back-to-list">Back to List</a>
            </div>
        </div>
    </div>
</div>


@section Scripts {{
    @{{await Html.RenderPartialAsync("_ValidationScriptsPartial");}}

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>
        $(document).ready(function () {{
            $('#Department').change(function () {{
                var department = $(this).val();
                var sectionDropdown = $('#Section');
                var plantDropdown = $('#Plant');

                sectionDropdown.empty().append('<option value="">-- Select Section --</option>');
                plantDropdown.empty().append('<option value="">-- Select Plant --</option>');

                if (department) {{
                    // Using template literals for cleaner URL construction
                    $.getJSON(`@Url.Action("GetSectionsAndPlants")?department=${{department}}`, function (data) {{
                        if (data.sections && data.sections.length > 0) {{
                             sectionDropdown.prop('disabled', false);
                            $.each(data.sections, function (i, item) {{
                                sectionDropdown.append($('<option>', {{ 
                                    value: item.value, 
                                    text: item.text 
                                }}));
                            }});
                        }} else {{
                            sectionDropdown.prop('disabled', true);
                        }}
                        
                        if (data.plants && data.plants.length > 0) {{
                            plantDropdown.prop('disabled', false);
                            $.each(data.plants, function (i, item) {{
                                plantDropdown.append($('<option>', {{ 
                                    value: item.value, 
                                    text: item.text 
                                }}));
                            }});
                        }} else {{
                             plantDropdown.prop('disabled', true);
                        }}
                    }});
                }} else {{
                    sectionDropdown.prop('disabled', true);
                    plantDropdown.prop('disabled', true);
                }}
            }}).trigger('change'); // Trigger change on load to set initial state
        }});
    </script>
}}