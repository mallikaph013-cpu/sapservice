@model List<myapp.Models.NewsArticleViewModel>
@{
    ViewData["Title"] = "Company News";
}

<style>
    body {
        background-color: #f0f2f5;
    }

    .news-container {
        max-width: 900px;
        margin: 2rem auto;
    }

    .page-title {
        font-size: 2.5rem;
        font-weight: 700;
        color: #1a2c50;
        text-align: center;
        margin-bottom: 2rem;
    }

    .news-list-container {
        background-color: #ffffff;
        border-radius: 12px;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.07);
        overflow: hidden;
    }

    .news-list-item {
        display: flex;
        align-items: flex-start;
        padding: 1.5rem;
        border-bottom: 1px solid #e9ecef;
        text-decoration: none;
        color: inherit;
        transition: background-color 0.2s ease-in-out;
    }

    .news-list-item:last-child {
        border-bottom: none;
    }

    .news-list-item:hover {
        background-color: #f8f9fa;
    }

    .news-item-icon {
        font-size: 1.5rem;
        color: #F97316; /* Theme color */
        margin-right: 1.5rem;
        padding-top: 5px;
    }

    .news-item-content {
        flex-grow: 1;
    }

    .news-item-title {
        font-size: 1.2rem;
        font-weight: 600;
        color: #2c3e50;
        margin-bottom: 0.3rem;
    }

    .news-item-excerpt {
        font-size: 0.95rem;
        color: #5a6a7a;
        margin-bottom: 0.75rem;
        line-height: 1.6;
    }

    .news-item-meta {
        font-size: 0.85rem;
        color: #8895a7;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
</style>

<div class="news-container">
    <h1 class="page-title"><i class="fas fa-newspaper me-2"></i>@ViewData["Title"]</h1>

    <div class="news-list-container">
        @if (Model.Any())
        {
            foreach (var article in Model)
            {
                <a href="@article.ArticleUrl" class="news-list-item">
                    <div class="news-item-icon">
                        <i class="fas fa-desktop"></i>
                    </div>
                    <div class="news-item-content">
                        <h5 class="news-item-title">@article.Title</h5>
                        <p class="news-item-excerpt">@article.Excerpt</p>
                        <div class="news-item-meta">
                            <span>By @article.Author</span>
                            <span>@article.PublishedDate.ToString("MMMM dd, yyyy")</span>
                        </div>
                    </div>
                </a>
            }
        }
        else
        {
            <div class="text-center p-5">
                <p class="text-muted">No news articles found.</p>
            </div>
        }
    </div>
</div>
